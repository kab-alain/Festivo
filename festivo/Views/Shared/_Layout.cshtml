<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Festivo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Custom Navbar Styles */
        .navbar-custom {
            background-color: rgba(0, 0, 0, 0.7); /* Transparent dark background */
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
            transition: background-color 0.3s ease;
            height: 100px;
        }

            .navbar-custom a {
                font-family: 'Poppins', sans-serif;
                color: #fff !important; /* White text color */
            }

                .navbar-custom a:hover {
                    color: #ff6f61 !important; /* Change color on hover */
                }

        /* Set fixed height for the navbar */
        .navbar {
            height: 70px; /* Set height to 70px or adjust as needed */
            display: flex;
            align-items: center; /* Vertically align content */
        }

        .navbar-brand img {
            max-height: 60px; /* Limit the logo size without stretching */
            height: auto; /* Maintain aspect ratio */
        }

        /* Ensure the content isn't hidden behind the navbar */
        .content {
            padding-top: 100px;
        }

        /* Adjust navbar toggler */
        .navbar-toggler {
            border: none;
        }

        .navbar-toggler-icon {
            background-color: #fff;
        }

        /* Ensure the navbar links are aligned to the right */
        .navbar-nav {
            margin-left: auto; /* Align links to the right */
        }

        .nav-link {
            color: #fff; /* White text */
        }

            .nav-link:hover {
                color: #ff6f61; /* Color on hover */
            }

    </style>
    @Styles.Render("/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Include Styles Section in the Layout -->
    @RenderSection("Styles", required: false)  <!-- Ensure this line is present to render styles defined in individual views -->
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top" style="background-color: rgba(0, 0, 0, 0.7);">
        <div class="container">
            <a href="@Url.Action("Index", "Home")">
                <img src="~/Content/logo.png" alt="Festivo Logo" style="height: 190px; margin-left:-100px;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!-- ms-auto aligns links to the right -->
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Event Type", "index", "EventTypes", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Event feed", "index", "EventFeedbacks", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Event", "index", "Events", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("User", "index", "Users", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Festivo</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
