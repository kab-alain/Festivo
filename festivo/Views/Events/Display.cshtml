@model IEnumerable<festivo.Models.Event>

@{
    ViewBag.Title = "Upcoming Events";
}

<div class="container">
    <header class="header">
        <div class="logo">
            <h1>Festivo</h1>
        </div>
        <nav class="nav-links">
            <a href="#">Logout</a>
            <a href="#">Contact</a>
        </nav>
        <link href="https://fonts.googleapis.com/css2?family=Kantumruy+Pro:wght@400;700&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Judson:wght@700&display=swap" rel="stylesheet">
    </header>

    <div class="search-bar">
        <input type="text" placeholder="Search Location" class="search-input">
        <button class="search-btn">Find</button>
    </div>

    <h2 class="section-title">Upcoming Events</h2>

    <div class="events-grid">
        @foreach (var item in Model)
        {
            <div class="event-card">
                <div class="image-container">
                    <img src="@item.Image" alt="Event Image" class="event-image">
                </div>
                <div class="event-details">
                    <h3>@item.Title</h3>
                    <p class="event-info"><strong>Date:</strong> @item.Date</p>
                    <p class="event-info"><strong>Time:</strong> @item.StartTime</p>
                    <p class="event-info"><strong>City:</strong> @item.City</p>
                    <p class="event-info"><strong>Venue:</strong> @item.Venue</p>
                    <p class="event-info"><strong>Price:</strong> @item.Price</p>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("RSVP", "Create", "Tickets", new { eventId = item.EventID }, new { @class = "btn btn-warning btn-sm" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>


        /* General Styling */
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            background: linear-gradient(to bottom, #333, #666);
            color: #fff;
        }

        .container {
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
        }

        .logo h1 {
            color: #ff6f61;
            font-family: 'Pacifico', cursive;
            margin: 0;
        }

        .nav-links a {
            color: #fff;
            text-decoration: none;
            margin-left: 15px;
            font-weight: bold;
        }

        .search-bar {
            display: flex;
            margin: 20px 0;
            border-radius: 5px;
        }

        .search-input {
            flex: 1;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 30px;
        }

        .search-btn {
            padding: 10px 20px;
            border: none;
            background-color: #8a2be2;
            color: #fff;
            cursor: pointer;
            border-radius: 30px;
            margin-left: 10px;
        }

        .section-title {
            text-align: center;
            color: #b19cd9;
            font-size: 2rem;
            margin-left: 10px;
        }

        /* Event Cards Grid */
        .events-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
        }

        .event-card {
            background-color: #ffffffb4;
            color: #333;
            border-radius: 25px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            display: flex;
            flex-direction: column;
        }

        .image-container {
            overflow: hidden;
            border-radius: 20px 20px 0 0; /* Top corners rounded */
            margin: 5px;
            border-radius: 20px 20px 0 0;
        }

        .event-image {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

        .event-details h3 {
            font-family: 'Judson', serif; /* Apply Judson font */
            font-weight: bold; /* Make it bold */
            font-size: 24px; /* Set font size to 24px */
            color: #333; /* Set the text color to dark gray */
            margin: 0 0 10px; /* Adjust the bottom margin */
        }

        .event-details {
            padding: 15px;
        }

            .event-details h3 {
                margin: 0 0 10px;
                font-size: 1.5rem;
                color: black;
            }

            .event-details .description {
                font-size: 0.95rem;
                color: #555;
                margin: 10px 0;
            }

            .event-details p {
                margin: 5px 0;
            }

        .event-info {
            font-family: 'Kantumruy Pro', sans-serif;
            font-weight: 700;
            font-size: 1rem;
            color: black;
            font-size: 15px;
            margin: 0; /* Remove extra margin */
            line-height: 1;
        }

        .btn-group {
            margin-top: 10px;
            margin-left: 80px;
        }

        /* Small Button */
        .btn-sm {
            width: 100%;
            height: 40px;
            margin-right: 5px;
            padding: 8px 12px;
            border-radius: 20px; /* Rounded corners */
            text-decoration: none;
            font-size: 0.85rem;
            border: none; /* Remove default border */
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2); /* Add subtle shadow */
            transition: all 0.3s ease; /* Smooth transition effects */
        }

        /* Warning Button */
        .btn-warning {
            background-color: #8a2be2;
            color: #fff;
            border: none;
            text-align: center;
            line-height: 24px;
            transition: all 0.3s ease;
        }

            .btn-warning:hover {
                background-color: #2d1138;
                box-shadow: 0px 6px 8px rgba(0, 0, 0, 0.5); /* Enhance shadow on hover */
                transform: translateY(-3px); /* Slight upward lift */
            }

            .btn-warning:active {
                background-color: #1f0b25;
                box-shadow: 0px 3px 4px rgba(0, 0, 0, 0.9); /* Shrink shadow on click */
                transform: translateY(2px); /* Press effect */
            }

    </style>
}
